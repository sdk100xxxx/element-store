# Database - PostgreSQL (local Docker or hosted)
# Local: docker compose up -d then use:
DATABASE_URL="postgresql://elementstore:elementstore@localhost:5432/elementstore"
# Production: set DATABASE_URL in Vercel to your Neon/Supabase connection string

# NextAuth (production: use a new strong secret, set NEXTAUTH_URL to your live URL)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-to-a-long-random-string"

# Stripe - test keys for local; production: use live keys in host env only
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional
NEXT_PUBLIC_DISCORD_URL="https://discord.gg/"
